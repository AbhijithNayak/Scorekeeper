#:kivy 1.8.0
<AddButton@Button>:
    font_size: '22sp'
    markup: True
    text: "[b]ADD PLAYER[/b]"
    background_color: 0, 0.4, 0.8, 1.0
    
    
<HeaderLayout@BoxLayout>:
    orientation: 'horizontal'
    #padding: 0.02*self.width, 0.04*self.height
    spacing: 0.1*self.width
    canvas:
        Color:
            rgba: 1, 1, 0, 1.0
        Rectangle:
            size: self.size
            pos: self.pos
    #size_hint: 1, 1
#    center_x: self.parent.center_x
#    top: 0.95*self.parent.top
#    width: self.parent.width
#    height: 0.10*root.height

#PLAYER NAME LABEL
    Label:
        font_size: '22sp'
        text: "[b]Name[/b]"
        markup: True
        size_hint: 0.6, None
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size
        halign: 'left'
        valign: 'bottom'

#PLAYER SCORE LABEL
    Label:
        font_size: '22sp'    
        text: "[b]Score[/b]"
        markup: True
        size_hint: 0.2, None
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size
        halign: 'left'        
        valign: 'bottom'

#PLAYER TOTAL LABEL
    Label:
        font_size: '22sp'    
        text: "[b]Total[/b]"
        markup: True
        size_hint: 0.2, None
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size      
        halign: 'left'
        valign: 'bottom'


<CapitalInput@TextInput>:
    multiline: False
    focus: False
    font_size: '22sp'    
    bold: True
    size_hint: 0.6, 0.8
    halign: 'left'
    valign: 'center'
    disabled_foreground_color: 1,0,0,0.5

<IntegerInput@TextInput>:
    multiline: False
    focus: False
    font_size: '22sp'    
    bold: True
    size_hint: 0.2, 0.8
    halign: 'right'
    valign: 'center'
    text_size: self.size      

<UserLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    spacing: 0.1*self.width
    center_x: root.center_x
    width: root.width

    name: NameTI
    score: ScoreTI
    total: TotalTI

#PLAYER NAME INPUT
    CapitalInput:
        id: NameTI

#PLAYER SCORE INPUT
    IntegerInput:
        id: ScoreTI

#PLAYER TOTAL INPUT
    IntegerInput:
        id: TotalTI
        text: ScoreTI.text
        readonly: True


Carousel:
    loop: True
    ScorekeepWidget:
        id: inputwidget
        databox: DataBox
        scrollview: scrlv

        canvas:
            Color:
                rgba: 1, 1, 1, 1.0
            Rectangle:
                size: self.size
                pos: self.pos
        
        BoxLayout:
            orientation: 'vertical'
            padding: 0.02*self.width, 0.02*self.height, 0.02*self.width, 0.02*self.height #left, top, right, bottom
            size: root.size
            #spacing: 0.05*root.height

            HeaderLayout:
                size_hint: 1, 0.1 

            ScrollView:
                id: scrlv
                size_hint: 1, 0.8 

                BoxLayout:
                    id: DataBox
                    orientation: 'vertical'
                    size_hint: 1, None
                    pos: 0, scrlv.height
                    #top: scrlv.top
                    valign: 'top'
                    #spacing: 0.1*scrlv.height

            
            AddButton: 
                size_hint: 1, 0.1
                on_press: inputwidget.add_player()

    Image:
        source: "./xc.png"
        
