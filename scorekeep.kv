#:kivy 1.8.0
<AddButton@Button>:
    font_size: '22sp'
    markup: True
    text: "[b]ADD PLAYER[/b]"
    background_color: 0, 0.8, 0.4, 1.0

<UpdateButton@Button>:
    font_size: '22sp'
    markup: True
    text: "[b]UPDATE ROUND[/b]"
    background_color: 0, 0.4, 0.8, 1.0
    
    
<ButtonLayout@BoxLayout>:
    orientation: 'horizontal'
    spacing: 0.1*self.width
    canvas:
        Color:
            rgba: 1, 1, 0, 1.0
        Rectangle:
            size: self.size
            pos: self.pos
    AddButton:
    UpdateButton:

<HeaderLayout@BoxLayout>:
    orientation: 'horizontal'
    spacing: 0.1*self.width
    canvas:
        Color:
            rgba: 1, 1, 1, 1.0
        Rectangle:
            size: self.size
            pos: self.pos

#PLAYER NAME LABEL
    Label:
        font_size: '22sp'
        text: "[b]Name[/b]"
        markup: True
        size_hint: 0.6, 1
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size
        halign: 'left'
        valign: 'bottom'

#PLAYER SCORE LABEL
    Label:
        font_size: '22sp'    
        text: "[b]Score[/b]"
        markup: True
        size_hint: 0.2, 1
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size
        halign: 'left'        
        valign: 'bottom'

#PLAYER TOTAL LABEL
    Label:
        font_size: '22sp'    
        text: "[b]Total[/b]"
        markup: True
        size_hint: 0.2, 1
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size      
        halign: 'left'
        valign: 'bottom'


<CapitalInput@TextInput>:
    multiline: False
    focus: False
    font_size: '22sp'    
    bold: True
    size_hint: 0.6, 0.8
    halign: 'left'
    valign: 'center'
    disabled_foreground_color: 1,0,0,0.5

<IntegerInput@TextInput>:
    multiline: False
    focus: False
    font_size: '22sp'    
    bold: True
    size_hint: 0.2, 0.8
    halign: 'right'
    valign: 'center'
    text_size: self.size      

<UserLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, None
    spacing: 0.1*self.width
    center_x: root.center_x
    width: root.width

    name_ti: NameTI
    score_ti: ScoreTI
    total_ti: TotalTI

#PLAYER NAME INPUT
    CapitalInput:
        id: NameTI
        focus: True
        #text: self.parent.name_updated()

#PLAYER SCORE INPUT
    IntegerInput:
        id: ScoreTI

#PLAYER TOTAL INPUT
    IntegerInput:
        id: TotalTI
        text: ScoreTI.text
        readonly: True


Carousel:
    loop: True
    ScorekeepWidget:
        id: inputwidget
        databox: DataBox
        scrollview: scrlv
        addbutton: AddButton

        canvas:
            Color:
                rgba: 1, 1, 1, 1.0
            Rectangle:
                size: self.size
                pos: self.pos

#Top Most Box - contains three parts
#1. Header Layout
#2. ScrollView that contains the data(Databox)
#3. Buttons
        
        BoxLayout: 
            orientation: 'vertical'
            padding: 0.02*self.width, 0.02*self.height, 0.02*self.width, 0.02*self.height #left, top, right, bottom
            size: root.size
            spacing: 0.05*self.height

#1. Header Layout
            HeaderLayout:
                size_hint: 1, 0.05

#2. ScrollView that contains the data(Databox)
            ScrollView:
                id: scrlv
                #size_hint: 1, 0.7

#2.1 Player data entry area - databox
                BoxLayout:
                    id: DataBox
                    orientation: 'vertical'
                    size_hint: 1, None
                    pos: 0, scrlv.height
                    valign: 'top'
                    #UserLayout:
                    #    height: 0.16*scrlv.height

#3. Buttons
            BoxLayout:
                size_hint: 1, 0.2 
                orientation: 'vertical'
                spacing: 0.1*self.height
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1.0
                    Rectangle:
                        size: self.size
                        pos: self.pos

                UpdateButton:
                    size_hint: 0.5, 1
                    pos_hint: {'center_x': 0.5}
                
                AddButton: 
                    id: AddButton
                    on_press: inputwidget.add_player()
                    size_hint: 0.5, 1
                    pos_hint: {'center_x': 0.5}


#Page 2 of the Carousel
    Image:
        source: "./xc.png"
        
