#:kivy 1.8.0
<AddButton@Button>:
    font_size: '22sp'
    markup: True
    text: "[b]ADD PLAYER[/b]"
    background_color: 0, 0.4, 0.8, 1.0
    width: 0.4*self.parent.width
    height: 0.1*self.parent.height
    center_x: self.parent.center_x
    
    
<HeaderLayout@BoxLayout>:
    orientation: 'horizontal'
    padding: 0.02*self.width, 0.04*self.height
    spacing: 0.1*self.width
    size_hint: 1, 1
    center_x: self.parent.center_x
    top: 0.95*self.parent.top
    width: self.parent.width
    height: 0.10*root.height

#PLAYER NAME LABEL
    Label:
        font_size: '22sp'
        text: "[b]Name[/b]"
        markup: True
        size_hint: 0.6, None
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size
        halign: 'left'

#PLAYER SCORE LABEL
    Label:
        font_size: '22sp'    
        text: "[b]Score[/b]"
        markup: True
        size_hint: 0.2, None
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size
        halign: 'left'        

#PLAYER TOTAL LABEL
    Label:
        font_size: '22sp'    
        text: "[b]Total[/b]"
        markup: True
        size_hint: 0.2, None
        color: 0, 0.4, 0.8, 1.0
        text_size: self.size      
        halign: 'left'


<CapitalInput@TextInput>:
    multiline: False
    focus: False


<UserLayout@BoxLayout>:
    orientation: 'horizontal'
    size_hint: 1, 1
    spacing: 0.1*self.width
    center_x: root.center_x
    width: root.width

#PLAYER NAME INPUT
    CapitalInput:
        bold: True
        size_hint: 0.6, 1
        halign: 'left'
        disabled_foreground_color: 1,0,0,0.5

#PLAYER SCORE INPUT
    CapitalInput:
        bold: True
        size_hint: 0.2, 1
        halign: 'right'

#PLAYER TOTAL INPUT
    CapitalInput:
        bold: True
        size_hint: 0.2, 1
        halign: 'right'


<ScorekeepWidget>:
    databox: DataBox

    canvas:
        Color:
            rgba: 1, 1, 1, 1.0
        Rectangle:
            size: self.size
            pos: self.pos
    
    HeaderLayout:
    
    BoxLayout:
        id: DataBox
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 0.02*self.width, 0.00*self.height, 0.02*self.width, 0.08*self.height #left, top, right, bottom
        spacing: 0.1*self.height
        top: 0.90*self.parent.top
        width: self.parent.width
        height: 0.8*self.parent.height
        UserLayout:
        UserLayout:
        UserLayout:
    
    AddButton: 
        on_press: root.add_player()
