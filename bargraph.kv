<BarGraph@Widget>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1.0
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: 0, 0, 0, 1.0
        Line:
            id: baseline
            points: [0.1*root.width, 0.1*root.top, 0.1*root.width, 0.9*root.top]
            width: 1
